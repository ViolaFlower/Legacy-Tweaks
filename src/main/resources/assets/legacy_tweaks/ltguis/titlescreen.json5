{
  "actions": {
    "<init>": [
      {
        "type": "ifNull",
        "value": ":logoRenderer",
        "actions": [
          {
            "type": "putGlobal",
            "name": "logoRenderer",
            "value": "?getLegacyLogoRenderer"
          }
        ]
      }
    ],
    "init": [
      {
        "type": "action",
        "action": "super",
        "args": [
          "init"
        ]
      },
      "?clearWidgets",
      "?clearFocus",
      "?makeSplashRendererIfNull",
      {
        "type": "putGlobal",
        "name": "frameLayout",
        "value": "?newFrameLayout"
      },
      {
        "type": "putGlobal",
        "name": "linearLayout",
        "value": "?newVerticalLinearLayout"
      },
      {
        "type": "action",
        "action": "print",
        "args": [":linearLayout"]
      },
      {
        "type": "actionTo",
        "instance": ":linearLayout",
        "action": "LinearLayout.spacing",
        "args": ["?getButtonSpacing"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.playGame"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.miniGames"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.leaderboards"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.helpOptions"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.store"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.java"]
      },
      {
        "type": "actionTo",
        "instance": ":frameLayout",
        "action": "FrameLayout.addChild",
        "args": [":linearLayout"]
      },
      {
        "type": "action",
        "action": "addLayoutWidgets",
        "args": [":frameLayout"]
      },
      "?repositionElements"
//      {
//        "type": "actionTo",
//        "instance": ":frameLayout",
//        "action": "?exampleaction"
//      }
    ],
    "newVerticalLinearLayout": [
      {
        "type": "return",
        "value": {
          "type": "action",
          "action": "newLinearLayout",
          "args": ["vertical"]
        }
      }
    ],
    "makeSplashRendererIfNull": [
      {
        "type": "ifNull",
        "value": {
          "type": "getGlobal",
          "name": "splashRenderer"
        },
        "actions": [
          {
            "type": "putGlobal",
            "name": "splashRenderer",
            //"value": "?newSplashRenderer"
            "value": {
              "type": "action",
              "action": "newSplashManagerWithCustomText",
              "args": ["Data driven!"]
            }
          }
        ]
      }
    ],
    "render": [
      {
        "type": "action",
        "action": "super",
        "args": ["render", "^0", "^1", "^2", "^3"]
      },
      {
        "type": "actionTo",
        "instance": ":logoRenderer",
        "action": "LegacyLogoRenderer.renderLogo",
        "args": ["^0", "?width", 1]
      },
      {
        "type": "ifNotNull",
        "value": ":splashRenderer",
        "actions": [
          {
            "type": "actionTo",
            "instance": ":splashRenderer",
            "action": "SplashRenderer.render",
            "args": ["^0", "?width", "?font", 0xffffff00]
          }
        ]
      },
    ],
    "onClose": [
      {
        "type": "action",
        "action": "setScreen",
        "args": [":parent"]
      }
    ],
    "renderBackground": [
      {
        "type": "action",
        "action": "renderPanorama",
        "args": ["^0", 1]
      }
    ],
    "repositionElements": [
      {
        "type": "ifNotNull",
        "value": ":frameLayout",
        "actions": [
          {
            "type": "actionTo",
            "instance": ":frameLayout",
            "action": "FrameLayout.setMinWidth",
            "args": ["?width"]
          },
          {
            "type": "actionTo",
            "instance": ":frameLayout",
            "action": "AbstractLayout.setY",
            "args": ["?getButtonHeightPos"]
          },
          {
            "type": "actionTo",
            "instance": ":frameLayout",
            "action": "AbstractLayout.arrangeElements"
          }
        ]
      }
    ],
    // helper to more easily add buttons to the linear layout
    "addButtonToLayout": [{
      "type": "actionTo",
      "instance": ":linearLayout",
      "action": "LinearLayout.addChild",
      "args": [
        {
          "type": "actionTo",
          "instance": {
            "type": "actionTo",
            "instance": {
              "type": "action",
              "action": "newButtonBuilder",
              "args": [
                {
                  "type": "action",
                  "action": "Component.translatable",
                  "args": ["^0"]
                }
              ]
            },
            "action": "buttonAutoSize"
          },
          "action": "Button.Builder.build"
        }
      ]
    }]
  }
}