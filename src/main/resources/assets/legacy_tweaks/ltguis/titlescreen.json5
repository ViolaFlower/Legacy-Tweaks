{
  "actions": {
    "<init>": [
      {
        "type": "ifNull",
        "value": ":logoRenderer",
        "actions": [
          {
            "type": "putGlobal",
            "name": "logoRenderer",
            "value": "?getLegacyLogoRenderer"
          }
        ]
      }
    ],
    "init": [
      {
        "type": "action",
        "action": "super",
        "args": [
          "init"
        ]
      },
      "?clearWidgets",
      "?clearFocus",
      "?makeSplashRendererIfNull",
      {
        "type": "putGlobal",
        "name": "frameLayout",
        "value": "?newFrameLayout"
      },
//      {
//        "type": "actionTo",
//        "instance": ":frameLayout",
//        "action": "?exampleaction"
//      }
    ],
    "makeSplashRendererIfNull": [
      {
        "type": "ifNull",
        "value": {
          "type": "getGlobal",
          "name": "splashRenderer"
        },
        "actions": [
          {
            "type": "putGlobal",
            "name": "splashRenderer",
            //"value": "?newSplashRenderer"
            "value": {
              "type": "action",
              "action": "newSplashManagerWithCustomText",
              "args": ["Data driven!"]
            }
          }
        ]
      }
    ],
    "render": [
      {
        "type": "action",
        "action": "super",
        "args": ["render", "^0", "^1", "^2", "^3"]
      },
      {
        "type": "actionTo",
        "instance": ":logoRenderer",
        "action": "LegacyLogoRenderer.renderLogo",
        "args": ["^0", "?width", 1]
      },
      {
        "type": "ifNotNull",
        "value": ":splashRenderer",
        "actions": [
          {
            "type": "actionTo",
            "instance": ":splashRenderer",
            "action": "SplashRenderer.render",
            "args": ["^0", "?width", "?font", -256 /*0xffffff00*/]
          }
        ]
      },
    ],
    "onClose": [
      {
        "type": "action",
        "action": "setScreen",
        "args": [":parent"]
      }
    ],
    "renderBackground": [
      {
        "type": "action",
        "action": "renderPanorama",
        "args": ["^0", 1]
      }
    ]
  }
}