{
  "imports": [
    {
      "type": "importActionsFrom",
      "file": "legacy_tweaks:ltguis/layoututils.json"
    },
    {
      "type": "importActionsFrom",
      "file": "legacy_tweaks:ltguis/simplebackground.json"
    }
  ],
  "actions": {
    "<init>": [
      "?initLegacyLogoRenderer"
    ],
    "init": [
      {
        "type": "action",
        "action": "super",
        "args": [
          "init"
        ]
      },
      "?clearWidgets",
      "?clearFocus",
      "?makeSplashRendererIfNull",
      {
        "type": "putGlobal",
        "name": "frameLayout",
        "value": "?newFrameLayout"
      },
      {
        "type": "putGlobal",
        "name": "linearLayout",
        "value": "?newVerticalLinearLayout"
      },
      {
        "type": "action",
        "action": "print",
        "args": [":linearLayout"]
      },
      {
        "type": "actionTo",
        "instance": ":linearLayout",
        "action": "LinearLayout.spacing",
        "args": ["?getButtonSpacing"]
      },
      "?addTitleScreenButtons",
      {
        "type": "actionTo",
        "instance": ":frameLayout",
        "action": "FrameLayout.addChild",
        "args": [":linearLayout"]
      },
      {
        "type": "action",
        "action": "addLayoutWidgets",
        "args": [":frameLayout"]
      },
      "?repositionElements"
    ],
    "makeSplashRendererIfNull": [
      {
        "type": "ifNull",
        "value": {
          "type": "getGlobal",
          "name": "splashRenderer"
        },
        "actions": [
          {
            "type": "putGlobal",
            "name": "splashRenderer",
            "value": "?newSplashRenderer"
          }
        ]
      }
    ],
    "render": [
      {
        "type": "action",
        "action": "super",
        "args": ["render", "^0", "^1", "^2", "^3"]
      },
      {
        "type": "actionTo",
        "instance": ":logoRenderer",
        "action": "LegacyLogoRenderer.renderLogo",
        "args": ["^0", "?width", 1]
      },
      {
        "type": "ifNotNull",
        "value": ":splashRenderer",
        "actions": [
          {
            "type": "actionTo",
            "instance": ":splashRenderer",
            "action": "SplashRenderer.render",
            "args": ["^0", "?width", "?font", 0xffffff00]
          }
        ]
      }
    ],
    "shouldCloseOnEsc": [
      {
        "type": "return",
        "value": false
      }
    ],
    "isPauseScreen": [
      {
        "type": "return",
        "value": false
      }
    ],
    "addTitleScreenButtons": [
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.playGame", "@openSelectWorldScreen"]
      },
      {
        "type": "action",
        "action": "addButtonToLayoutConditional",
        "args": ["?_internal.customization.showMinigamesButton", "gui.legacy_tweaks.titleScreen.miniGames", "@openMultiplayerScreen"]
      },
      {
        "type": "action",
        "action": "addButtonToLayoutConditional",
        "args": ["?_internal.customization.showLeaderboardsButton", "gui.legacy_tweaks.titleScreen.leaderboards", "@openNotImplementedScreen"]
      },
      {
        "type": "action",
        "action": "addButtonToLayout",
        "args": ["gui.legacy_tweaks.titleScreen.helpOptions", "@openHelpOptionsScreen"]
      },
      {
        "type": "action",
        "action": "addButtonToLayoutConditional",
        "args": ["?_internal.customization.showMinecraftStoreButton", "gui.legacy_tweaks.titleScreen.store", "@openTestScreen"]
      },
      {
        "type": "action",
        "action": "addButtonToLayoutConditional",
        "args": ["?_internal.customization.showNewMinecraftButton", "gui.legacy_tweaks.titleScreen.java", "@switchToNewMinecraft"]
      },
      {
        "type": "action",
        "action": "addButtonToLayoutConditional",
        "args": ["?_internal.customization.showQuitButton", "gui.legacy_tweaks.titleScreen.quit", "@quitGame"]
      }
    ]
  }
}